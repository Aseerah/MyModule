<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rp_logo"
            android:layout_width="match_parent"
            android:layout_height="153dp"
            app:srcCompat="@drawable/rp_logo"
            android:paddingBottom="35dp"/>

        <TextView
            android:id="@+id/diploma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:paddingBottom="20dp"
            android:text="@string/diploma" />




        <Button
            android:id="@+id/btn203"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C203 - Web Appln Development in php" />

        <Button
            android:id="@+id/btn346"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C346 - Mobile App Development " />
    </LinearLayout>

</LinearLayout>